<?xml version="1.0" encoding="UTF-8"?>

<schemalist>
    <enum id="org.gnome.shell.extensions.lilypad.hide-extension">
        <value value="0" nick="Never"/>
        <value value="1" nick="When empty"/>
        <value value="2" nick="Always"/>
   </enum>

    <schema id="org.gnome.shell.extensions.lilypad" path="/org/gnome/shell/extensions/lilypad/">
        <key type="as" name="rightbox-order">
            <default>[]</default>
            <summary>Order of icons in rightbox</summary>
        </key>
        <key type="as" name="lilypad-order">
            <default>[]</default>
            <summary>Icons in collapsible Lilypad menu</summary>
        </key>
        <key type="as" name="ignored-order">
            <default>[]</default>
            <summary>Icons ignored by Lilypad</summary>
        </key>
        <key type="b" name="reorder">
            <default>false</default>
        </key>
        <key type="b" name="show-icons">
            <default>false</default>
        </key>
        <key name="auto-collapse" type="b">
            <default>true</default>
            <summary>Enable timer on collapsible group</summary>
        </key>
        <key name="auto-collapse-millisecond" type="i">
            <default>1000</default>
        </key>
        <key name="hide-indicator" type="i">
            <default>0</default>
            <range min="0" max="2"/>
            <description>follows hide-extension enum</description>
        </key>

    </schema>
</schemalist>
